<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Główny motyw aplikacji -->
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Kolor status baru -->
    <item name="android:statusBarColor">@color/colorPrimaryDark</item>

    <!-- Kolor systemowego paska nawigacyjnego -->
    <item name="android:navigationBarColor">@color/splashscreen_background</item>
    <!-- false = białe ikony nawigacji -->
    <item name="android:windowLightNavigationBar">false</item>
    <!-- wyłącz wymuszanie kontrastu (API 29+) -->

    <!-- Twoje pozostałe ustawienia -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:buttonStyle">@style/WhiteButton</item>
    <item name="android:editTextStyle">@style/ResetEditText</item>
    <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
  </style>

  <!-- Motyw splashscreen (wyświetlany przy starcie) -->
  <style name="Theme.App.SplashScreen" parent="AppTheme">
    <item name="android:windowBackground">@color/splashscreen_background</item>
    <!-- ten sam zielony pasek nawigacyjny od razu na splashu -->
    <item name="android:navigationBarColor">@color/splashscreen_background</item>
    <item name="android:windowLightNavigationBar">false</item>
  </style>

  <!-- Reset stylu EditText -->
  <style name="ResetEditText" parent="@android:style/Widget.EditText">
    <item name="android:padding">0dp</item>
    <item name="android:textColorHint">#c8c8c8</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <!-- Białe przyciski -->
  <style name="WhiteButton" parent="@android:style/Widget.Material.Button">
    <item name="android:backgroundTint">@color/button_background_white</item>
    <item name="android:textColor">@color/button_text_white</item>
  </style>

</resources>
